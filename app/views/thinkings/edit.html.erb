<h1>Update Your Thinkings!</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    
    <% if @thinking.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@thinking.errors.count, "error") %></h2>
        <ul>
        <% @thinking.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
      
    <%= form_for(@thinking) do |f| %>
      
      <%= f.label :factor %>
      <%= f.text_field :factor, class: 'form-control', placeholder: '手に入れたい要素・スキルを記入してください' %>

      <%= f.label :action_plan1 %>
      <%= f.text_field :action_plan1, class: 'form-control', placeholder: 'そのために継続する必要がある行動を10個ほど記入してください(1)' %>
      
      <%= f.label :action_plan2 %>
      <%= f.text_field :action_plan2, class: 'form-control', placeholder: 'そのために継続する必要がある行動を10個ほど記入してください(2)' %>

