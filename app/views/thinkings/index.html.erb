<div class="container">
  <div id="new-blog-link">
    <%= link_to '思考する', new_thinking_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @thinkings.each do |thinking| %>
      <% if current_user.id == thinking.user_id %>
      <div class="col-xs-12 col-md-12 panel panel-default">
        <h2><%= thinking.factor %></h2>
        <p>Created_at: <%= thinking.created_at.strftime("%Y-%m-%d%H:%M") %> (Japan)</p>
        <p>Updated_at: <%= thinking.updated_at.strftime("%Y-%m-%d%H:%M") %> (Japan)</p>
          <div class="blog-links">
            <%= link_to '詳細', thinking, class: 'btn btn-default' %>
            <%= link_to '編集', edit_thinking_path(thinking), class: 'btn btn-info' %> 
            <%= link_to '削除', thinking, method: :delete, data: { confirm: '思考を削除してもよろしいですか？' }, class: 'btn btn-danger' %>
          </div>
       </div>
      <% end %>
    <% end %>
  </div>

  <div class="routine_index">
    <h1>
      手に入れたい要素・スキル一覧
    </h1>
  </div>

  <div class="row">
    <% @routine_actions.each do |thinking| %>
      <div class="col-xs-12 col-md-12 blog-panel">
        <h2 class="well"><%= thinking.factor %></h2>
      </div>
    <% end %>
  </div>
</div>